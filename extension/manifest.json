{
  "manifest_version": 3,
  "name": "GitHub Editor Auto Settings",
  "version": "1.0",
  "description": "Autosave GitHub editor settings at the top right!",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ]
}
